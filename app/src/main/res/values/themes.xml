<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BottomNavigationBarGit" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/design_default_color_surface</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <!-- User-customizable theme -->
    <style name="Theme.UserCustom" parent="Base.Theme.BottomNavigationBarGit">
        <!-- You can dynamically set colors based on user preferences -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <!-- Style for customizing the BottomNavigationView ActiveIndicator -->
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/white</item>
    </style>
</resources>
